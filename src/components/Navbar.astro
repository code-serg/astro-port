---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
---

<header class="md:flex p-5 gap-5">
  <Astronav>
    <div class="flex flex-grow justify-between items-center mx-auto">
      <a href="/" class="flex items-center gap-2">
        <img src="/logo/logo-cs.png" width="50px" height="50px" />
        <div class="text-xl font-bold text-custom-teal text-opacity-75">
          codeserg.io
        </div>
      </a>
      <div class="block md:hidden">
        <MenuIcon class="w-4 h-4 text-white-800" />
      </div>
    </div>
    <MenuItems class="hidden md:flex items-center">
      <ul class="flex flex-col p-3 gap-3 md:flex-row md:gap-5">
        <li>
          <a href="/projects" class="hover:text-custom-teal">Projects</a>
        </li>
        <li><a href="/about" class="hover:text-custom-teal">About</a></li>
      </ul>
    </MenuItems>
  </Astronav>
</header>
